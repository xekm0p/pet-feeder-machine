<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <property name="autoIncrement" value="true"/>

    <changeSet id="202011101030" author="Aleksandar Tonev">
        <createTable
                schemaName="pet_feeder"
                tableName="meal">

            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true"/>
            </column>

            <column name="portion_size" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="date" type="datetime">
                <constraints nullable="true"/>
            </column>

            <column name="machine_id" type="bigint">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <dropDefaultValue tableName="meal" columnName="date" columnDataType="datetime"/>

    </changeSet>


</databaseChangeLog>